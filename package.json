{
  "private": true,
  "workspaces": [
    "packages/npm/skiffa-core",
    "packages/npm/skiffa-lib",
    "packages/npm/skiffa-generator",
    "packages/npm/skiffa-opentelemetry",
    "packages/npm/skiffa-appsignal",
    "generated/npm/*"
  ],
  "packageManager": "npm@10.5.0",
  "scripts": {
    "spelling": "cspell",
    "formatting": "prettier --check *",
    "build": "$npm_execpath run --workspaces --if-present build",
    "pretest": "$npm_execpath run --workspaces --if-present pretest",
    "test": "$npm_node_execpath --test packages/npm/*/transpiled/**/*.test.js"
  },
  "devDependencies": {
    "cspell": "^8.15.4",
    "prettier": "^3.3.3"
  }
}
